{
    "name": "psx/api-bundle",
    "type": "symfony-bundle",
    "description": "PSX API Symfony Bundle",
    "keywords": ["symfony", "api", "rest", "code-generator", "specification", "openapi", "dto"],
    "homepage": "https://phpsx.org",
    "license": "MIT",
    "authors": [
        {
            "name": "Christoph Kappestein",
            "email": "christoph.kappestein@gmail.com",
            "homepage": "https://chrisk.app"
        }
    ],
    "require": {
        "php": ">=8.2",
        "psx/api": "^7.2",
        "psx/data": "^7.0",
        "psx/schema": "^7.2",
        "psx/sql": "^4.1",
        "symfony/framework-bundle": "^6.4|^7.0"
    },
    "autoload": {
        "psr-4": {
            "PSX\\ApiBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PSX\\ApiBundle\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "vimeo/psalm": "^6.0"
    }
}
